{
	"compilerOptions": {
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"typeRoots": ["node_modules/@types", "@types", "node-env.d.ts"],
		"baseUrl": ".",
		"paths": {
			"@styles/*": ["styles/*"],
			"@components/*": ["components/*"],
			"@assets/*": ["assets/*"]
		}
	},
	"exclude": [".next", "node_modules", "tests"],
	"include": ["./**/*.ts", "./**/*.tsx"]
}
